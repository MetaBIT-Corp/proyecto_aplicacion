<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="68dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="5dp">

    <TextView
        android:id="@+id/ap_tv_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ap_item"
        android:textSize="18sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="68dp"
        android:layout_weight="0.01"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ap_turno_item"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/turno" />

        <android.support.v4.widget.Space
            android:layout_width="10dp"
            android:layout_height="0dp" />

        <ImageView
            android:id="@+id/ap_info_item"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/read_"/>

        <android.support.v4.widget.Space
            android:layout_width="10dp"
            android:layout_height="0dp" />


        <ImageView
            android:id="@+id/ap_editar_item"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/edit_" />

        <android.support.v4.widget.Space
            android:layout_width="10dp"
            android:layout_height="0dp" />


        <ImageView
            android:id="@+id/ap_eliminar_item"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/delete_" />
    </LinearLayout>

</LinearLayout>